{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "author": "Your Name",
  "homepage_url": "https://github.com/jy-hirasawa/thundirbird-gemini-mail-review-addon",
  "applications": {
    "gecko": {
      "id": "gemini-mail-review@thunderbird-addon.localhost",
      "strict_min_version": "102.0"
    }
  },
  "permissions": [
    "storage",
    "compose"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "compose_action": {
    "default_popup": "popup.html",
    "default_title": "Check email with Gemini",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
